<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background">

    <!--Order from bottom stack to top
        Each block has space of 40dp-->
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/mediai_logo_noname"
        android:layout_marginBottom="130dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="45dp"
        android:text="@string/app_name"
        android:textSize="45dp"
        android:fontFamily="@font/nextsunday"
        android:textColor="@color/white"
        android:shadowColor="@color/dark_teal"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="20"
        />

    <!--Email and Password #text-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="136dp"
        android:text="Email:"
        android:textSize="20dp"
        android:fontFamily="@font/winterdraw"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="45dp"
        android:layout_marginRight="150dp"
        android:text="Password:"
        android:textSize="20dp"
        android:fontFamily="@font/winterdraw"
        />

    <!--Email and Password input-->
    <EditText
        android:id="@+id/userEmail"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:hint="@string/email_input_hint"
        android:inputType="textEmailAddress"
        android:textSize="20dp"
        android:background="@color/white"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginStart="30dp"
        app:endIconMode="password_toggle">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/userPassword"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:hint="@string/password_input_hint"
            android:inputType="textPassword"
            android:textSize="20dp"
            android:background="@color/white"/>

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/user_login"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="85dp"

        android:text="@string/user_login"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:background="@color/teal_700"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/user_signup"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="125dp"

        android:background="@color/teal_700"
        android:text="@string/user_signup"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|left"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="20dp"
        android:text="Forgot Password"
        android:textColor="@color/login_blue"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/pharmacist_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|right"
        android:layout_marginTop="300dp"
        android:layout_marginRight="20dp"
        android:text="@string/pharmacist_login"
        android:textColor="@color/login_blue"
        android:textSize="15dp" />

</FrameLayout>

