<?xml version="1.0" encoding="utf-8"?>

<!--for small cards for different cases-->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/case_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Case Title"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/case_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pending"
            android:textColor="@color/green"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/case_card"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"

        android:background="@drawable/bot_chat_bubble"
        >

        <TextView
            android:id="@+id/case_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Case ID"
            android:textSize="18dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/case_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pending/ Resolved"
            android:textSize="14dp"
            android:layout_marginTop="4dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>