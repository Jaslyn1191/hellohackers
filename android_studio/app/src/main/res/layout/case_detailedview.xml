<?xml version="1.0" encoding="utf-8"?>



<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="380dp"
    android:layout_height="700dp"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="30dp">
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/background_1"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/case_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:text="Case ID"
                    android:textColor="@color/black"
                    android:fontFamily="@font/timess" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="15dp"
                    android:text="Patient Name:"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/patient_name"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="60dp"
                    android:text="Patient Name Placeholder"
                    android:textSize="15dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="90dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="15dp"
                    android:text="Patient Age:"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/patient_age"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="90dp"
                    android:text="Patient Age Placeholder"
                    android:textSize="15dp"
                    android:textColor="@color/black"/>

                <!-- Medicine Prescription Detail -->
                <FrameLayout
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="130dp"
                    android:layout_gravity="center|top"

                    android:padding="10dp"
                    android:background="@drawable/bot_chat_bubble"
                    >

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="left|top"
                        android:text="Medicine"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="left|top"
                        android:layout_marginLeft="160dp"
                        android:text="Dosage (mg)"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/medicine_placeholder"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|top"
                        android:layout_marginTop="15dp"
                        android:paddingVertical="10dp"
                        />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/dosage_placeholder"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|top"
                        android:layout_marginLeft="160dp"
                        android:layout_marginTop="15dp"
                        android:paddingVertical="10dp"
                        />

                </FrameLayout>


            </FrameLayout>

        </ScrollView>

        <Button
            android:id="@+id/approve"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="95dp"
            android:text="Approve prescription"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:padding="5dp"
            android:background="@color/teal_700"
            />

        <Button
            android:id="@+id/contact_patient"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="95dp"
            android:text="Contact Patient"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:padding="5dp"
            android:background="@color/teal_700"/>

    </FrameLayout>




</androidx.cardview.widget.CardView>
